pipeline {
    agent any
    tools {
        nodejs '22.2.0'
    }
    stages {
        stage('Install Dependencies') {
            steps {
                echo 'This stage installs all the dependencies required for the application.'
                // Install dependencies
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                echo 'This stage compile and package the code into a zip file as a build artifact.'
                sh 'rm -rf *.tar.gz'
                sh 'tar czf nanogram-$BUILD_NUMBER.tar.gz node_modules server.js package.json public Controllers Models Routers Test dbConnections.js data.json README.md .gitignore'
            }
        }
        stage('Test') {
            steps {
                echo "This stage runs unit tests using Mocha and Chai to ensure the code functions as expected."
                sh 'npm test'
            }
        }
        /*
        
